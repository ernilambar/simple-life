{
  "name": "simple-life",
  "title": "Simple Life",
  "version": "2.5.3",
  "license": "GPL-2.0+",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernilambar/simple-life/"
  },
	"packtor": {
		"files": [
			"**/*",
			"!*.cjs",
			"!*.js",
			"!*.json",
			"!*.lock",
			"!*.yaml",
			"!sass/**/*",
			"!scripts/**/*",
			"!src/**/*"
		]
	},
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "version": "easy-replace-in-files",
    "eslint": "eslint --quiet .",
    "eslint:fix": "eslint --quiet --fix .",
    "prewpdeploy": "pnpm run deploy",
    "wpdeploy": "wp-deployer",
    "pot": "composer run-script pot",
		"vendor": "composer install --no-dev --no-scripts -o",
    "clean": "rimraf deploy js vendor",
    "predeploy": "pnpm run clean && pnpm run vendor && pnpm run build",
    "deploy": "packtor"
  },
  "wpDeployer": {
    "repoType": "theme",
    "username": "rabmalin",
    "buildDir": "deploy/simple-life",
    "earlierVersion": "2.5.2",
    "deployAssets": false
  },
  "browserslist": "> 1%, not dead",
  "devDependencies": {
    "@wordpress/eslint-plugin": "^12.8.0",
    "browser-sync": "^2.27.10",
    "dotenv": "^16.0.1",
    "easy-replace-in-files": "^1.0.2",
    "eslint": "^8.21.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "packtor": "^1.0.2",
    "rimraf": "^6.0.1",
    "wp-deployer": "^1.0.3"
  }
}
