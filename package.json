{
  "name": "simple-life",
  "title": "Simple Life",
  "version": "2.5.3",
  "license": "GPL-2.0+",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/ernilambar/simple-life/"
  },
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "version": "grunt version",
    "preinstall": "npx only-allow pnpm",
		"eslint": "eslint \"scripts/**/*.{js,jsx}\" --quiet",
		"eslint:fix": "eslint \"scripts/**/*.{js,jsx}\" --quiet --fix",
    "pot": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy,node_modules",
    "textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
    "deploy": "shx rm -rf deploy/ && shx mkdir deploy && copy-files-from-to --config .copyfiles.json && cd deploy/ && shx mv temp $npm_package_name && bestzip ../$npm_package_name.zip * && cd .. && shx mv $npm_package_name.zip deploy/"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^12.6.0",
    "bestzip": "^2.2.1",
    "browser-sync": "^2.27.10",
    "copy-files-from-to": "^3.2.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.19.0",
    "grunt": "^1.5.3",
    "grunt-replace": "^2.0.2",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "node-wp-i18n": "^1.2.6",
    "shx": "^0.3.4"
  }
}
